# The overview topology of the whole application cluster or services,
type StatusCode {
     status: String!
}

extend type Mutation {
    #Set userDefNodeName
    setUserDefineNodeName(serviceSequence: String!, userDefineNodeName: String!): StatusCode!

    #Set userDefNodeType
    setUserDefineNodeType(serviceSequence: String!, userDefineNodeType: String!): StatusCode!

    #Set resetNodeCiValue
    resetNodeCiValue(sequence: Int!, isAddress: Int!): StatusCode!
    resetNodesCiValue(sequences: [Int!]!, isAddress: Int!): StatusCode!

    #delete duplicate node removeServiceById
    removeServiceById(sequence: Int!): StatusCode!
    resetNodesCache(resetAllFlag: Int!): StatusCode!

     #Set userDefBsNodeName
     setUserDefineBsNodeName(bsId: String!, userDefineBsNodeName: String!): StatusCode!
     #Set userDefBsNodeType
     setUserDefineBsNodeType(bsId: String!, userDefineBsNodeType: String!): StatusCode!

     #Set userDefTsNodeName
     setUserDefineTsNodeName(tsId: String!, userDefineTsNodeName: String!): StatusCode!
     #Set userDefTsNodeType
     setUserDefineTsNodeType(tsId: String!, userDefineTsNodeType: String!): StatusCode!
}